<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.shippingdetails.PaymentFragment">

    <TextView
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_below="@+id/imageview"
        android:text="@string/e_payment_des"
        android:textSize="20sp"
        android:textStyle="bold"
          />
    <ImageView
        android:id="@+id/imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/visa"
        android:layout_marginBottom="20dp"
        android:layout_alignParentTop="true"/>
    <ImageView
        android:id="@+id/pay_state_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/amount"/>
    <TextView
        android:id="@+id/pay_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_below="@id/pay_state_img"/>
    <Button
        android:id="@+id/pay"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/e_place_an_order"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        style="@style/button"
        />
    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:indeterminateTint="@color/red"
         android:layout_above="@id/pay"/>

</RelativeLayout>