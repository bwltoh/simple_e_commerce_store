<resources>

    <!-- Base application theme. Theme.AppCompat.Light.DarkActionBar-->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="TextApp" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="TextStyle" parent="@style/TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="AppNameExpandAppearance" parent="TextAppearance.Design.Error">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="Cutlargecomponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="CutMediumComponent" parent="ShapeAppearanceOverlay.BottomLeftDifferentCornerSize">
        <item name="cornerFamily">cut</item>

        <item name="cornerSizeBottomLeft">12dp</item>
    </style>

    <style name="Cutsmallcomponent" parent="ShapeAppearanceOverlay.BottomRightCut">
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSize">12dp</item>
    </style>


    <style name="RoundedSmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="RoundedmediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>


    </style>

    <style name="RoundedlargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/red</item>

    </style>
</resources>
